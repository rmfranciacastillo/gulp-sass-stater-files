{
  "name": "basic_sass_setup",
  "version": "1.0.0",
  "description": "This is a basic setup for a sass project. This project was only intended for the creation of templates made with simple HTML5, CSS3 and VanillaJS",
  "main": "app/templates/index.html",
  "scripts": {
    "start": "gulp",
    "lint": "eslint gulpfile.js ./app/js/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rmfranciacastillo/gulp-sass-stater-files"
  },
  "keywords": [
    "Gulp",
    "Sass",
    "Browserfy"
  ],
  "author": "Renato Francia",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "autoprefixer": "^9.5.1",
    "browser-sync": "^2.26.7",
    "cssnano": "^4.1.10",
    "del": "^4.1.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.2",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-inject": "^5.0.2",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^8.0.0",
    "gulp-rename": "^1.4.0",
    "gulp-sass": "^4.0.2",
    "gulp-uglify": "^3.0.2",
    "gulp-useref": "^3.1.6",
    "husky": "^2.3.0",
    "lint-staged": "^8.1.7",
    "node-sass": "^4.13.1"
  },
  "dependencies": {},
  "lint-staged": {
    "*.js": [
      "eslint --fix gulpfile.js ./app/js/**/*.js",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
