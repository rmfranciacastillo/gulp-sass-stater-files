{
  "name": "basic_sass_setup",
  "version": "2.0.0",
  "description": "This is a basic setup for a sass project. This project was only intended for the creation of templates made with simple HTML5, CSS3 and VanillaJS",
  "main": "app/templates/index.html",
  "scripts": {
    "start": "gulp",
    "lint": "eslint gulpfile.js ./app/js/**/*.js",
    "check-updates": "ncu",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rmfranciacastillo/gulp-sass-stater-files"
  },
  "keywords": [
    "Gulp",
    "Sass",
    "Browserfy"
  ],
  "author": "Renato Francia",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/preset-env": "^7.16.0",
    "autoprefixer": "^10.4.0",
    "browser-sync": "^2.27.7",
    "cssnano": "^5.0.10",
    "del": "^6.0.0",
    "eslint": "^8.2.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.25.3",
    "gulp": "^4.0.2",
    "gulp-babel": "^8.0.0",
    "gulp-inject": "^5.0.5",
    "gulp-plumber": "^1.2.1",
    "gulp-postcss": "^9.0.1",
    "gulp-rename": "^2.0.0",
    "gulp-sass": "^5.0.0",
    "gulp-uglify": "^3.0.2",
    "gulp-useref": "^5.0.0",
    "husky": "^7.0.4",
    "lint-staged": "^11.2.6",
    "npm-check-updates": "^12.0.2",
    "sass": "^1.43.4"
  },
  "dependencies": {
    "npm-force-resolutions": "^0.0.10"
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix gulpfile.js ./app/js/**/*.js",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "resolutions": {
    "graceful-fs": "^4.2.4"
  }
}
